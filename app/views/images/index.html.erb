
<% if @images.any? %>
  <ul>
    <% @images.each do |image| %>
      <li> <%= image_tag image.image.url(:thumb) %>
           <%= image.name %> <br> <%= image.description %> <%= image.user.username %> </li>
           <%= link_to (image.user.username), image_path(image.user_id) %>
    <%end%>  
  </ul>

<% else %>

No images added yet

<%end%>
